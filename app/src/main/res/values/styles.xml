<resources>

    <!-- Base application theme. -->
    <!-- <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar"> -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!-- Сделать свою тему, а также поиграться с верхней строкой сосояния-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="android:colorBackground">@color/white</item>-->
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:windowNoTitle">true</item>

        <item name="myColor">@color/white_pink</item>
    </style>

    <!-- region AppTheme -->
    <!-- endregion -->

    <style name="bottomBar">
        <item name="android:background">@color/colorAccent</item>
    </style>

    
    <style name="topBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/topBarHeight</item>
        <item name="android:gravity">center|start</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Если не все будут такими exitButton , то отрефакторь -->
    <style name="exitButton">
        <!-- WARNING: потециально опасно -->
        <item name="android:id">@id/exitButton</item>
        <item name="android:layout_width">@dimen/topBarHeight</item>
        <item name="android:layout_height">@dimen/topBarHeight</item>

        <item name="android:padding">10dp</item>
    </style>
</resources>

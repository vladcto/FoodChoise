<resources>

    <!-- Base application theme. -->
    <style name="LightTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!-- Сделать свою тему, а также поиграться с верхней строкой сосояния-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="android:colorBackground">@color/white</item>-->
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:windowNoTitle">true</item>

        <!-- attr -->
        <item name="myColor">@color/lightCardViewBackground</item>
        <item name="toolbarBackground">@color/toolbarBackgroundLight</item>
        <item name="backgroundProfile">@drawable/light_gradient</item>
        <item name="divider_theme">@color/divider_light</item>
        <item name="colorAccentText"></item>
    </style>

    <!-- region AppTheme -->
    <!-- endregion -->

    <style name="DarkTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <!-- Сделать свою тему, а также поиграться с верхней строкой сосояния-->
        <item name="colorPrimary">@color/colorPrimaryNight</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkNight</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/darkCardViewBackground</item>
        <!--<item name="android:colorBackground">@color/white</item>-->
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:windowNoTitle">true</item>

        <!-- attr -->
        <item name="myColor">@color/cardview_dark_background</item>
        <item name="toolbarBackground">@color/toolbarBackgroundDark</item>
        <item name="backgroundProfile">?android:windowBackground</item>
        <item name="divider_theme">@color/divider_black</item>
        <item name="colorAccentText"></item>
    </style>

    <!-- region DarkTheme -->
    <!-- endregion -->

    <style name="bottomBar">
        <item name="android:background">@color/colorAccent</item>
    </style>

    <style name="CardViewBasic" parent="CardView">
        <item name="cardBackgroundColor">?attr/myColor</item>
    </style>

    <style name="topBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/topBarHeight</item>
        <item name="android:gravity">center|start</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Если не все будут такими exitButton , то отрефакторь -->
    <style name="exitButton">
        <!-- WARNING: потециально опасно -->
        <item name="android:id">@id/exitButton</item>
        <item name="android:layout_width">@dimen/topBarHeight</item>
        <item name="android:layout_height">@dimen/topBarHeight</item>

        <item name="android:padding">10dp</item>
    </style>

    <style name="container">
        <item name="android:padding">8dp</item>
    </style>
</resources>
